<mvc:View xmlns="sap.m"
          xmlns:mvc="sap.ui.core.mvc"
          controllerName="logaligroup.sapui5.controller.InvoicesList">

    <List id="invoiceList"
          headerText="{i18n>invoiceListTitle}"
          class="sapUiResponsiveMargin"
          width="auto"
          items="{ path: 'northwind>/Invoices',
                  sorter: { path: 'ShipperName', group: true}}">

        <headerToolbar>
            <Toolbar id="_IDGenToolbar">
                <Title id="_IDGenTitle" text="{i18n>invoiceListTitle}"/>
                <ToolbarSpacer id="_IDGenToolbarSpacer" />
                <SearchField id="_IDGenSearchField" width="50%" search=".onFilterInvoices"/>
            </Toolbar>
        </headerToolbar>

        <items>
            <ObjectListItem id="_IDGenObjectListItem" 
                            title="{northwind>Quantity} x {northwind>ProductName}"
                            number="{
                                parts: [
                                    { path: 'northwind>ExtendedPrice' },
                                    { path: 'currency>/usd' }
                                ],
                                type: 'sap.ui.model.type.Currency',
                                formatOptions: {
                                    showMeasure: false,
                                    style: 'short',
                                    decimals: 2
                                }
                            }"                              
                            numberUnit="{currency>/usd}"
                            numberState="{= ${northwind>ExtendedPrice} > 50 ? 'Success' : 'Error'}">
                <!-- <firstStatus>
                    <ObjectStatus id="_IDGenObjectStatus" 
                                  text="{ 
                                    parts: [
                                        { path: 'invoices>Status' },
                                        { path: 'i18n>invoiceStatusA' },
                                        { path: 'i18n>invoiceStatusB' },
                                        { path: 'i18n>invoiceStatusC' }
                                    ],
                                    formatter: '.formatter.invoiceStatus'}"/>
                </firstStatus> -->
            </ObjectListItem>
        </items>
    </List>
</mvc:View>