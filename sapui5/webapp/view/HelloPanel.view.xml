<mvc:View controllerName="logaligroup.sapui5.controller.HelloPanel"
          xmlns="sap.m"
          xmlns:core="sap.ui.core"
          xmlns:mvc="sap.ui.core.mvc"
          displayBlock="true">

    <Panel id="pannel" headerText="{i18n>helloPanel}" class="sapUiResponsiveMargin" width="auto">
        <content>
            <Button id="_IDGenButton"
                    icon="sap-icon://action"
                    text="{i18n>helloDialogButton}"
                    press=".onOpenDialog"
                    class="sapUiSmallMarginEnd"/>

            <Button id="btn" text="{i18n>showHelloButtonText}" press=".onShowHello" class="sapUiSmallMarginEnd"/>
            <Input id="input"
                value="{/recipient/name}"
                valueLiveUpdate="true"
                width="60%"/>
            <Text id="text" text="Hello {/recipient/name}" class="sapUiSmallMargin boldElements"/>
        </content>
    </Panel>
    <core:Fragment fragmentName="logaligroup.sapui5.view.Form01"/>
</mvc:View>