<mvc:View controllerName="logaligroup.sapui5.controller.App"
          xmlns="sap.m" 
          xmlns:mvc="sap.ui.core.mvc"
          displayBlock="true">

    <Shell id="shell"> 
        <App id="app">
            <pages>
                <Page id="page"
                    title="{i18n>appTitle}">
                    <content>
                        <Panel id="pannel" headerText="{i18n>helloPanel}" class="sapUiResponsiveMargin" width="auto">
                            <content>
                                <Button id="btn" text="{i18n>showHelloButtonText}" press=".onShowHello" class="sapUiSmallMarginEnd"/>
                                <Input id="input" 
                                    value="{/recipient/name}"                                    
                                    valueLiveUpdate="true"
                                    width="60%"/>
                                <Text id="text" text="Hello {/recipient/name}" class="sapUiSmallMargin boldElements"/>
                            </content>
                        </Panel>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>